    <TextView
        android:id="@+id/textView_post"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:text="Post"
        app:layout_constraintStart_toEndOf="@+id/spinner_tag"
        app:layout_constraintTop_toBottomOf="@+id/textView_search" />

    <TextView
        android:id="@+id/textView_page2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Page2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_tag" />

    <TextView
        android:id="@+id/textView_addfriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="加好友"
        app:layout_constraintStart_toEndOf="@+id/textView_status"
        app:layout_constraintTop_toBottomOf="@+id/editText_search" />

    <TextView
        android:id="@+id/textView_my_friend"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:hint="friend"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_status" />

    <TextView
        android:id="@+id/textView_my_friend_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="確認"
        app:layout_constraintStart_toEndOf="@+id/textView_my_friend"
        app:layout_constraintTop_toBottomOf="@+id/textView_status" />

    <TextView
        android:id="@+id/textView_search_invitation_list"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Search my friend"
        app:layout_constraintStart_toEndOf="@+id/textView_my_friend_confirm"
        app:layout_constraintTop_toBottomOf="@+id/textView_search" />

</android.support.constraint.ConstraintLayout>