<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    >

    <Spinner
        android:id="@+id/page4_spinner"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></Spinner>


    <TextView
        android:id="@+id/page4_search"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:gravity="bottom"
        android:text="search"
        app:layout_constraintStart_toEndOf="@+id/page4_edittext"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UnknownId" />

    <ListView
        android:id="@+id/page4_listView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/page4_spinner"
        tools:ignore="UnknownId" />



    <EditText
        android:id="@+id/page4_edittext"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:hint="Author"
        app:layout_constraintStart_toEndOf="@+id/page4_spinner"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>